{
    "bail": 1,
    "verbose": true,
    "moduleNameMapper": {
        "^.+\\.(css|less|gif|jpg|jpeg|svg|png)$": "module.exports = {};",
        "src/(.*)": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
   "modulePaths": ["<rootDir>/src"]
}